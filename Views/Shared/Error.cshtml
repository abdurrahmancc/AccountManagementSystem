@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">Oops!</h1>
    <p class="lead">@ViewBag.ErrorMessage ?? "An unexpected error occurred."</p>

    @if (Model?.ShowRequestId == true)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }

    <a href="/ChartOfAccount/Index" class="btn btn-primary mt-3">Go to Chart Of Account Page</a>
</div>
