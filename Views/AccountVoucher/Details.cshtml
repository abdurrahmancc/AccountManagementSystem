@model IEnumerable<AccountManagementSystem.Models.AccountVoucherModel>

@{
    ViewData["Title"] = "Voucher List";
}


<div style="overflow-y: auto; height: 100%;">
    <div style="display:flex; justify-content:space-between; align-items:center;margin-bottom:20px;">
        <h2>Voucher List</h2>
        <a id="btnCreate" href="/AccountVoucher" class="btn btn-sm btn-primary text-white">Create</a>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Voucher Date</th>
                <th>Voucher Type</th>
                <th>Voucher Number</th>
                <th>Reference No</th>
                <th>Note</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.VoucherDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.VoucherType.ToString()</td>
                    <td>@item.VoucherNumber</td>
                    <td>@item.ReferenceNo</td>
                    <td>@item.Note</td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <form asp-action="Delete" asp-controller="AccountVoucher" method="post">
                            <input type="hidden" name="id" value="@item.VoucherId" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

