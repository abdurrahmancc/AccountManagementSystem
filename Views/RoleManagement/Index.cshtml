@model List<AccountManagementSystem.Models.RoleManagementModel>

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Role Setup </h2>

<form asp-action="Save" method="post" class="row g-3 mb-4">
    <input type="hidden" name="RoleId" value="00000000-0000-0000-0000-000000000000" />

    <div class="col-md-4">
        <label class="form-label">Role Name</label>
        <input type="text" name="RoleName" class="form-control" required />
    </div>

    <div class="col-md-4">
        <label class="form-label">Description</label>
        <input type="text" name="Description" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Discriminator</label>
        <input type="text" name="Discriminator" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.RoleName</td>
                <td>@role.Description</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@role.RoleId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <a asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
