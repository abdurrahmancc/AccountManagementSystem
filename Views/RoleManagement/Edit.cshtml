@model AccountManagementSystem.Models.RoleManagementModel

<h2>Edit Role</h2>

<form asp-action="Edit" method="post" class="row g-3 mb-4">
    <input type="hidden" asp-for="RoleId" />

    <div class="col-md-4">
        <label class="form-label">Role Name</label>
        <input asp-for="RoleName" class="form-control" required />
    </div>

    <div class="col-md-4">
        <label class="form-label">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="col-md-4">
        <label class="form-label">Discriminator</label>
        <input asp-for="Discriminator" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
